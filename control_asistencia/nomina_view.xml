 			<record model="ir.ui.view" id="view_nomina2">
			<field name="name">view_nomina_tree</field>
			<field name="model">hr.payslip</field>
			<field name="type">tree</field>
			<field name="inherit_id" ref="hr_payroll.view_hr_payslip_tree"/>
			<field name="arch" type="xml">
				<xpath expr="/tree/field[@name='number']" position="before">
					<field name="id_item" />
				</xpath>
			</field>
		</record>
 	
			<!-- primera vista -->
		<record model="ir.ui.view" id="view_nomina1">
			<field name="name">view_nomina_form</field>
			<field name="model">hr.payslip</field>
			<field name="type">form</field>
			<field name="inherit_id" ref="hr_payroll.view_hr_payslip_form"/>
			<field name="arch" type="xml">
<!-- 				<page string="Días trabajados y entradas" position="attributes"> -->
<!--                 	<attribute name="invisible">true</attribute>  -->
<!--             	</page> -->
