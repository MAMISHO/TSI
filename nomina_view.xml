<?xml version="1.0" encoding="UTF-8"?>
<openerp>
	<data>
		<record model="ir.ui.view" id="view_nomina3">
			<field name="name">view_nomina_search</field>
			<field name="model">hr.payslip</field>
			<field name="type">search</field>
			<field name="inherit_id" ref="hr_payroll.view_hr_payslip_filter"/>
			<field name="arch" type="xml">
				<xpath expr="/search/group/filter[@string='States']" position="after">
					<filter string="Estructura" domain="[]" context="{'group_by':['struct_id']}" />
				</xpath>
			</field>
		</record>
				
 		<record model="ir.ui.view" id="view_nomina2">
			<field name="name">view_nomina_tree</field>
			<field name="model">hr.payslip</field>
			<field name="type">tree</field>
			<field name="inherit_id" ref="hr_payroll.view_hr_payslip_tree"/>
			<field name="arch" type="xml">
				<xpath expr="/tree/field[@name='number']" position="before">
					<field name="id_item" />
				</xpath>
			</field>
		</record>
 		
		<record model="ir.ui.view" id="view_nomina1">
			<field name="name">view_nomina_form</field>
			<field name="model">hr.payslip</field>
			<field name="type">form</field>
			<field name="inherit_id" ref="hr_payroll.view_hr_payslip_form"/>
			<field name="arch" type="xml">
				<xpath expr="/form/sheet/notebook/page[@string='Other Information']" position="after">
					<page string="Iten Nomina">
						<field name="id_item"/>
					</page>
				</xpath>
			</field>
		</record>

		<record id="act_nomina" model="ir.actions.act_window">
	   		<field name="name">nomina_act</field>
	   		<field name="res_model">hr.payslip</field>
	   		<field name="view_type">form</field>
	   		<field name="view_mode">tree,form</field>
		</record>
	
		<menuitem name="Nomina" id="submenu_nomina" parent="empleados" sequence="100" action="act_nomina" />
		<menuitem name="Nomina" id="submenu_nomina_link" parent="submenu_nomina" sequence="100" action="act_nomina" />
	</data>
</openerp>